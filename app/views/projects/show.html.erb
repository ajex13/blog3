

<%= link_to "edit", edit_post_path(@project)%>
<%= link_to "delete", post_path(@project),method: :delete,data: { confirm: "Are you  sure? "} %>

<!-- Static below ---->

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime("%A, %b %d")%></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div class="content">
    <%= markdown @project.description %>
    <div class="button_wrapper">
    <a class="project_button" href="<%= @project.link%>" target="_blank">Visit <%= @project.title %></a>
    </div>
  <hr>

</div>

</div>
